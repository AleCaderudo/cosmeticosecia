{
  "version": 2,
  "builds": [
    {
      "src": "back/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // Rota para API: direciona para /back/server.js
      "dest": "/back/server.js"
    },
    {
      "src": "/",           // Rota para index.html
      "dest": "/index.html" // Especifica o arquivo a ser servido
    },
    {
      "src": "/(.*)",       // Rota padrão (captura tudo que não foi acima)
      "dest": "/back/server.js"  // Direciona para o backend para outras URLs
    }
  ]
}
